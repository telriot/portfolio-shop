{
  "name": "portfolio-shop-next",
  "version": "0.0.1",
  "description": "A portfolio project for a fully fledged online shop",
  "types": "./dist/tsc/index.d.ts",
  "author": "Beniamino Tartarini <beniamino.tartarini@gmail.com>",
  "license": "MIT",
  "main": "./dist/tsc/index.js",
  "scripts": {
    "cli": "ts-node-dev src/cli.ts",
    "dev": " NODE_PATH=./src nodemon --watch './**/*.ts' --exec 'ts-node-dev' src/index.ts",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest --watchAll --no-cache",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node-dev",
    "docs": "typedoc --entryPoints src/index.ts",
    "build": "tsc -p tsconfig.json",
    "esbuild-node": "esbuild src/cli.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:dev": "esbuild src/cli.ts --bundle --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:watch": "esbuild src/cli.ts --bundle --watch --sourcemap=external --outfile=dist/esbuild/cli.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn install --prefix client && yarn build --prefix client "
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cookie-session": "^2.0.43",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mongoose-paginate-v2": "^1.3.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "jest": "^27.0.6",
    "mongodb-memory-server": "^7.2.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "typedoc": "^0.20.35",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.12.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.2",
    "mongoose-paginate-v2": "^1.4.1"
  }
}
