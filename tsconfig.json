{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist/tsc/",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "controllers/*":["./controllers/*"],
      "middleware/*":["./middleware/*"],
      "models/*":["./models/*"],
      "routes/*":["./routes/*"],
      "utils/arrays/*":["./utils/arrays/*"],
      "utils/cardData/*":["./utils/cardData/*"],
      "utils/objects/*":["./utils/objects/*"],
      "utils/queries/*":["./utils/queries/*"],
      "utils/time/*":["./utils/time/*"],
      "utils/testTimeout":["./utils/testTimeout"]

    },
    "lib": [
      "ES6",
      "DOM"
    ],
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
